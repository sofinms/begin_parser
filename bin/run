#!/usr/bin/env ruby
$:.unshift(File.expand_path('../lib', __dir__))

require 'thor'
require 'o14/autoload_o14'
require 'autoload'

class App < Thor
  class_option :log_level, type: :string, default: 'ERROR'
  class_option :log_filename, type: :string, default: nil

  def initialize(*args)
    super
    initialize_logger
  end

  desc 'simple_parser URL', 'run simple parser with given URL'
  def simple_parser(url)
    Parser::Example.run(url)
  end

  private

  def initialize_logger
    O14::ProjectLogger.get_logger options[:log_level], options[:log_filename]
  end
end

App.start
